<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Calculadora - Cookies</title>
</head>
<body>
    <form method="post" action="/calc">
        <h2>Calculadora</h2>
        <input type="text" name="num1" />
        <select name="op">
            <option value="+">+</option>
            <option value="-">-</option>
            <option value="*">*</option>
            <option value="/">/</option>
        </select>
        <input type="text" name="num2" />
        <input type="submit" value="calcular" />
    </form>
    <%if (contas.length > 0) {%>
        <h2>Contas Anteriores</h2>
        <ul>
            <%contas.forEach(conta => {%>
                <li><%=conta.num1%> <%=conta.op%> <%=conta.num2%> = <%=conta.total%></li>
            <%})%>
        </ul>
    <%}%>
</body>
</html>